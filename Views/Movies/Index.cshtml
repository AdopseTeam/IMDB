@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row row-cols-1 row-cols-md-2">
    @* <div class="card-deck"> *@
        @foreach (var item in Model) {
            <div class="col mb-4">
            <div class="card" style="border-radius: 15px; border-width: thick;">
            <img src="https://image.freepik.com/free-vector/click-movie-logo-vector_18099-258.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title font-weight-bold">@Html.DisplayFor(modelItem => item.Title)</h5>
                <div>
                    <p class="card-text"><strong>@Html.DisplayNameFor(model => model.ReleaseDate):</strong> @Html.DisplayFor(modelItem => item.ReleaseDate)</p>
                    <p class="card-text"><strong>@Html.DisplayNameFor(model => model.Genre):</strong> @Html.DisplayFor(modelItem => item.Genre)</p>
                    <p class="card-text"><strong>@Html.DisplayNameFor(model => model.Rating):</strong> @Html.DisplayFor(modelItem => item.Rating)</p>
                </div> <br>
                <a href="#" class="btn btn-primary">More info</a>
            </div>
            </div>
            </div>
        }
    </div>
</div>
