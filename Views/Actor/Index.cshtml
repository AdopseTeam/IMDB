@model IEnumerable<MvcActor.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<div class="title">
    <h1>Actors</h1>
    <div class="row">
        <div class="col">
            <form asp-controller="Actor" asp-action="Index" style="display: inline-block;">
                <input id="title" type="text" name="SearchString" placeholder="Search by Name" />
                <input class="btn btn-dark" type="submit" value="Search"/>
            </form>
        </div>
    </div>
</div>
<br>

<div class="container2">
    <div class="row">
            @foreach (var item in Model) {
                <div class="col mb-4">
                <div class="card" style="width: 15rem;">
                <img src="~/img/profilpic.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <div>
                        <p class="card-text"><strong>@Html.DisplayNameFor(model => model.FirstName):</strong> @Html.DisplayFor(modelItem => item.FirstName)</p>
                        <p class="card-text"><strong>@Html.DisplayNameFor(model => model.LastName):</strong> @Html.DisplayFor(modelItem => item.LastName)</p>
                        <p class="card-text"><strong>@Html.DisplayNameFor(model => model.Birthday):</strong> @Html.DisplayFor(modelItem => item.Birthday)</p>
                    </div> <br>
                    <a class ="btn btn-warning" asp-controller="Actor" asp-action="Details" asp-route-id="@item.Id">More info</a>
                </div>
                </div>
                </div>
            }
        </div>
    </div>
</div>