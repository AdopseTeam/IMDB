@model dynamic
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1 class="title">Details</h1>

<div class="container">
    <h4>Series</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
           @Model.Series.Title
        </dd>
        <dt class="col-sm-2">
            Release Date
        </dt>
        <dd class="col-sm-10">
            @Model.Series.ReleaseDate
        </dd>
        <dt class="col-sm-2">
            Seasons
        </dt>
        <dd class="col-sm-10">
            @Model.Series.Seasons
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Series.Genre
        </dd>
        <dt class="col-sm-2">
           Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Series.Rating
        </dd>
        <dt class="col-sm-2">
            Overview
        </dt>
        <dd class="col-sm-10">
            @Model.Series.Overview
        </dd>
        <dt class="col-sm-2">
            Comment creator
        </dt>
        <dd class="col-sm-10">
            @Model.Comments.Creator
        </dd>
        <dt class="col-sm-2">
            Comment Date
        </dt>
        <dd class="col-sm-10">
            @Model.Comments.PubDate
        </dd>
        <dt class="col-sm-2">
            Comment Text
        </dt>
        <dd class="col-sm-10">
            @Model.Comments.Text
        </dd>
         <dt class="col-sm-2">
            @if(SignInManager.IsSignedIn(User))
            {
            <div class="row">
                <a class="btn btn-dark"
                    asp-action="NewSeries"
                    asp-controller="Watchlist"
                    asp-route-CurrentSeriesId="@Model.Id">
                        Add to Watchlist
                </a>
            </div>
            }
        </dt>
    </dl>
    <div>
    <a asp-action="Index">Back to List</a>
    </div>
</div>

