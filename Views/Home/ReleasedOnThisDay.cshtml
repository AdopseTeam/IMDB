
@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Released On This Day";
}

<div class="container-fluid padding">
    
    <div class="header p-3"> 
        <h2 class="py-2">@ViewData["Title"]</h2>
    <p class="lead">Need some inspiration? Check out all the movies that were released on this day. They have their birthday!</p>
    </div>
    
    <div class="row px-3 pt-4 row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6">
        @foreach (var item in Model) {
        <div class="col mb-4">
            <div class="card card-dsp">
                <img src="https://m.media-amazon.com/images/M/MV5BYjI3NDg0ZTEtMDEwYS00YWMyLThjYjktMTNlM2NmYjc1OGRiXkEyXkFqcGdeQXVyMTEyMjM2NDc2._V1_.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <p><img src="~/img/yellow_star.svg" style="vertical-align: sub;"> @Html.DisplayFor(modelItem => item.Rating)</p>
                    <h6 class="card-title pb-1 text-truncate">@Html.DisplayFor(modelItem => item.Title)</h6>
                    <div>
                        <p class="card-text text-truncate text-secondary">@Html.DisplayFor(modelItem => item.Genre)</p>
                    </div> <br>
                    <a class ="btn btn-dark btn-block" asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">Watchlist</a>
                </div>
            </div>
        </div>
        }
    </div>

</div>
