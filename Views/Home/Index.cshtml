    <ul class="carousel-indicators">
        <li data-target="#slides" data-slide-to="0" class="active"></li>
        <li data-target="#slides" data-slide-to="1"></li>
        <li data-target="#slides" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/movie1.png">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-2">TOP PICKS</h1>
                <h3>TV shows and movies just for you</h3>
                <a href="#"><button type="button" class="btn btn-outline-light btn-lg">Watch full list</button></a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/movie2.png">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-2">TOP PICKS</h1>
                <h3>TV shows and movies just for you</h3>
                <a href="#"><button type="button" class="btn btn-outline-light btn-lg">Watch full list</button></a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/movie3.png">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-2">TOP PICKS</h1>
                <h3>TV shows and movies just for you</h3>
                <a href="#"><button type="button" class="btn btn-outline-light btn-lg">Watch full list</button></a>
            </div>
        </div>
    </div>
</div>


<br>
<!--Released On This Month Carousel-->



<div class="container-fluid padding">
    <div class="row">
        <div class="col-1">

        </div>
        <div class="col-9" style="padding-bottom:unset;">
            <a asp-controller="Home" asp-action="ReleasedOnThisMonth">
                <h1 class="display-4">Released On @DateTime.Now.ToString("MMMM", CultureInfo.InvariantCulture)</h1>
            </a>
            <h5>Check out all the movies that were released on this month. They have their Birthday!</h5>

        </div>
        <hr />
    </div>

    <div id="carousel-month" class="carousel slide" data-interval="false">
        <div class="carousel-inner">

            @foreach (var group in Model.Select((x, index) => new { element = x, index }).GroupBy(x => x.index / 5, x => x.element))
            {
                <div class="carousel-item @((group.Key == 0)?Html.Raw("active"):Html.Raw(""))">
                    <div class="row justify-content-center">

                        @foreach (var item in group)
                        {
                            <div class="col-2">
                                <div class="card card-dsp">
                                    @{
                                        string ImgPath = "https://image.tmdb.org/t/p/w300" + item.Poster_path;
                                    }
                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id"><img src="@ImgPath" class="card-img-top" alt="..."></a>
                                    <div class="card-body">
                                        <p><img src="~/img/yellow_star.svg" style="vertical-align: sub; width:20px; height:20px"> @Html.DisplayFor(modelItem => item.Rating)</p>
                                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id"><h6 class="card-title pb-1 text-truncate">@Html.DisplayFor(modelItem => item.Title)</h6></a>
                                        <div>
                                            <p class="card-text text-truncate text-muted small">@Html.DisplayFor(modelItem => item.Genre)</p>
                                        </div><br />

                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a class="btn btn-dark btn-block" asp-controller="Watchlist" asp-action="NewMovie" asp-route-CurrentMovieId="@item.Id">Add to Watchlist</a>

                                        }
                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carousel-month" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-month" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>